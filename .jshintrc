{
    // Code complexity control
    "maxparams": 4,
    "maxdepth": 3,
    // Avoid "Bad line breaking before '+'"
    "laxbreak": true,
    // Inspired by airbnb/javascript
    "indent": 4,
    "strict": true,
    "newcap": true,
    "eqeqeq": true,
    "latedef": true,
    "undef": true,
    "unused": true,
    "browser": true,
    // Allow logging to the console
    "globals": {
        "d3": false
    }
}
